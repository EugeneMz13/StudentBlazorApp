@page "/faculties"
@using StudentAppMint.Data
@inject FacultyService FacultyService
@inject NavigationManager NavigationManager

<h3>Faculties List</h3>
@* <NavLink href="/createproduct" class="btn btn-primary">Create</NavLink> *@
<table class="table">
    <thead>
        <tr>
            <th>Faculty ID</th>
            <th>Faculty Name</th>
            <th>Departments</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faculty in Faculty)
        {
                <tr>
                    <td>@faculty.FacultyId</td>
                    <td>@faculty.FacultyName</td>
                    <td>@faculty.Departments</td>
                </tr>
        }
    </tbody>
</table>

